<% include ../header %>
  
  <h2 class="page-header"><%= post.category._id ? '编辑文章' : '添加文章'%></h2>
  <%- messages() %>
  <form class="vertical-form" method="post" action=<%= action %>>
  	<div class="form-group">
  		<label for="title">标题</label>
  		<input class="form-control input-lg" name="title" placeholder="请输入标题。。" value=<%= post.title %>>
  	</div>
  	<div class="form-group">
  		<label for="category">分类</label>
  		<select class="form-control input-lg" name="category">
  			<option>- 选择分类 -</option>
	  		<% categories.forEach(function(category){ %>
	  			<option value=<%= category._id %> <%= post.category._id.toString() === category._id.toString() ? 'selected' : '' %>><%= category.name %></option>
	  		<% }) %>
	  	</select>
  	</div>
  	<div class="form-group">
  		<label for="content">内容</label>
  		<textarea id="js-post-content" class="form-control" name="content"><%= post.content %></textarea>
  	</div>
  	<button class="btn btn-info" type="submit"><%= post.category._id ? '保存' : '发布'%></button>
  </form>
 
<% include ../footer %>
<script type="text/javascript" src="/js/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/js/server/post.js"></script>